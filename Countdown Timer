  <script>
    
    function updateStaticTime() {
      document.getElementById("days").textContent = 10; // Set static value for Days
      document.getElementById("hours").textContent = 12; // Set static value for Hours
      document.getElementById("minutes").textContent = 30; // Set static value for Minutes
      document.getElementById("seconds").textContent = 12; // Set static value for Seconds
    }

    updateStaticTime(); // Call the function when the page loads to populate the values
